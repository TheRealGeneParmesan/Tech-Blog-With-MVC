<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
  <div class="row mb-4 blog">
    <div class="col-md-5">
      <h2>
  <a href="/blog/{{blog.id}}" class="blog-name">{{blog.name}}</a>
</h2>
      <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
      <p>{{blog.description}}</p>
      <form class="comment-form">
        <div class="form-group">
          <label for="comment">Add a comment:</label>
          <textarea class="form-control" id="comment-txt" rows="3"></textarea>
        </div>
        <button type="submit" id="comment-btn" data-id="{{blog.id}}">Submit</button>
      </form>
    </div>
    <div class="col-md-7">
      <div class="comments">
        {{#each blog.comments as |comment| }}
          <div class="comment">
            <p>{{comment.comment}}</p>
            <p>Posted by {{comment.user.name}} on {{format_date comment.date_created}}</p>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
{{/each}}

<script src="/js/home.js"></script>